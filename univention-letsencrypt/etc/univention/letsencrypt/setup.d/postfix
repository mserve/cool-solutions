. /usr/share/univention-lib/ucr.sh

DIR_LE="/etc/univention/letsencrypt"

if is_ucr_true letsencrypt/services/postfix ; then
    if dpkg -l univention-mail-postfix | grep -q ^ii &>/dev/null
    then setfacl -m u:postfix:r "$DIR_LE/domain.key"
        ucr set \
            mail/postfix/ssl/key="$DIR_LE/domain.key" \
            mail/postfix/ssl/certificate="$DIR_LE/signed.crt" \
            mail/postfix/ssl/cafile="$DIR_LE/chained.pem"
    else ucr unset letsencrypt/services/postfix
    fi
fi
