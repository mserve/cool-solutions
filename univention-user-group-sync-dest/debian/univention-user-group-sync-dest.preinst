set -e

case "$1" in
    install)
        password_local=$(pwgen -Bv 40 1)

        echo $password_local > /etc/univention-user-group-sync-dest.secret
        chmod 600 /etc/univention-user-group-sync-dest.secret

        # Generate local service user
        echo "Creating local service user"
        ldap_base=$(ucr get ldap/base)

        # TODO: Already exists
        udm users/user create --position "cn=users,$ldap_base" --ignore_exists \
        --option posix --set username=ucs-sync --set lastname=ucs-sync --set password=$password_local \
        --set uidNumber=342 --set primaryGroup="cn=Domain Users,cn=groups,$ldap_base" \
        --set unixhome=/var/lib/univention-user-group-sync
        ucr set auth/sshd/user/ucs-sync=yes

        user_exists_python=1
        retries=0
        while [ $user_exists_python -ne 0 ]
        do
          if [ $retries -ge 12 ]; then
            echo -e "Local service user ucs-sync did not exist after 120 seconds. Exiting..."
            exit 1
          fi
          echo -e "Local service user ucs-sync does not yet exist on local system. Waiting..."
          sleep 10
          python -c "import pwd;owning_user_number = pwd.getpwnam('ucs-sync').pw_uid" > /dev/null 2>&1
          user_exists_python=$?
          (( retries++ ))
        done
        echo -e "Local service user ucs-sync exists now."

        if [ ! -f /var/lib/univention-user-group-sync/.ssh/id_rsa ]; then
            su - ucs-sync -c "ssh-keygen -q -f ~/.ssh/id_rsa -t rsa -N ''"
        fi

        echo -e "Done!"

    ;;

    upgrade|abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
